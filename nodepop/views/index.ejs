<%- include('header.ejs') %>

  <h2>este es el index</h2>
  <div class="container mt-4">
    <div class="row row-cols-3 g-4" id="gallery">
      <!-- Las imágenes se generarán con JavaScript -->
    </div>
  </div>

  <script>
    const productos = [
      { nombre: "Producto 1", propietario: "Juan", precio: "$10" },
      { nombre: "Producto 2", propietario: "Ana", precio: "$20" },
      { nombre: "Producto 3", propietario: "Carlos", precio: "$15" },
      { nombre: "Producto 4", propietario: "María", precio: "$25" },
      { nombre: "Producto 5", propietario: "Pedro", precio: "$30" },
      { nombre: "Producto 6", propietario: "Sofía", precio: "$12" },
      { nombre: "Producto 7", propietario: "Luis", precio: "$18" },
      { nombre: "Producto 8", propietario: "Laura", precio: "$22" },
      { nombre: "Producto 9", propietario: "Andrés", precio: "$28" },
      { nombre: "Producto 10", propietario: "Marta", precio: "$35" },
      { nombre: "Producto 11", propietario: "Ricardo", precio: "$40" },
      { nombre: "Producto 12", propietario: "Elena", precio: "$50" }
    ];

    const gallery = document.getElementById("gallery");
    productos.forEach((producto, index) => {
      const col = document.createElement("div");
      col.className = "col";
      col.innerHTML = `
            <div class="card">
                <img src="https://picsum.photos/300?random=${index + 1}" class="card-img-top" alt="${producto.nombre}">
                <div class="card-body">
                    <h5 class="card-title">${producto.nombre}</h5>
                    <p class="card-text">Propietario: ${producto.propietario}</p>
                    <p class="card-text">Precio: ${producto.precio}</p>
                </div>
            </div>
        `;
      gallery.appendChild(col);
    });
  </script>

